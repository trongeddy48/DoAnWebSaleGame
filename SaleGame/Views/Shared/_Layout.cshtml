<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Game Store GOD</title>
    <link rel="shortcut icon" href="~/Content/images/favicon.ico" type="image/x-icon">
    <script src="~/Content/js/jquery-3.3.1.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500&display=swap" rel="stylesheet">
    <link href="~/Content/fonts/fontawesome/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Paytone+One&display=swap" rel="stylesheet">
    <link href="~/Content/css/style.css" rel="stylesheet" />
    <link href="~/Content/css/home.css" rel="stylesheet" />
    <link href="~/Content/css/contact.css" rel="stylesheet" />
    <link href="~/Content/css/product.css" rel="stylesheet" />
    <link href="~/Content/css/post.css" rel="stylesheet" />
    <link href="~/Content/css/cart.css" rel="stylesheet" />
    <link href="~/Content/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/Content/owlcarousel/assets/owl.theme.default.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="~/Content/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/Content/js/owl.js"></script>
</head>
<body>
    <!-- container -->
    <div class="container">
        <!-- menu top -->
        <div class="row">
            <div class="col-md-7 dtl-header">
                <p class="text"><marquee>Game Store - Nơi cung cấp các sản phẩm Game chất lượng và tốt nhất !</marquee></p>
            </div>
            <div class="col-md-5 dtl-header">
                <p class="text-1">Hỏi Đáp</p>
                <p class="text-1">Hướng Dẫn</p>
                <p class="text-1">Đăng ký</p>
                <p class="text-1">Đăng nhập</p>
            </div>
        </div>
        <!-- end menu top -->
        <!-- menu bottom -->
        <div class="row">
            <div class="col-md-3 header__logo">
                <a href="#" class="header__logo-link">
                    <img src="~/Content/images/logo.png" alt="Logo" class="header__logo-img">
                </a>
            </div>
            <div class="col-md-6 header__search">
                <select name="" id="" class="header__search-select">
                    <option value="0">All</option>
                    <option value="1">Sony Playstation</option>
                    <option value="2">Microsoft Xbox</option>
                    <option value="3">Nintendo</option>
                    <option value="4">Đồ công nghệ</option>
                </select>
                <input type="text" class="header__search-input" placeholder="Tìm kiếm tại đây...">
                <button class="header__search-btn">
                    <div class="header__search-icon-wrap">
                        <i class="fas fa-search header__search-icon"></i>
                    </div>
                </button>
            </div>
            <div class="col-md-2 header__call">
                <div class="header__call-icon-wrap">
                    <i class="fas fa-phone-alt header__call-icon"></i>
                </div>
                <div class="header__call-info">
                    <div class="header__call-text">
                        Gọi điện tư vấn
                    </div>
                    <div class="header__call-number">
                        034.543.9877
                    </div>
                </div>
            </div>
            <div class="col-md-1 header__cart">
                <a href="cart.html">
                    <span class="header__notice">0</span>
                    <i class="fas fa-shopping-cart header__nav-cart-icon"></i>
                </a>
            </div>
        </div>
        <!-- end menu bottom -->
        <div class="row">
            <div class="col-md-3 header__nav-menu-wrap">
                <i class="fas fa-bars header__nav-menu-icon"></i>
                <div class="header__nav-menu-title">Danh mục sản phẩm</div>
            </div>
            <div class="col-md-9 header__nav">
                <ul class="header__nav-list">
                    <li class="header__nav-item">
                        @Html.ActionLink("Trang chủ", "Index", "Home",null , new { @class = "colorTextAction"}) &emsp;
                    </li>
                    <li class="header__nav-item">
                        @Html.ActionLink("Giới thiệu", "Index", "Introducetion",null , new { @class = "colorTextAction" }) &emsp;
                    </li>
                    <li class="header__nav-item">
                        @Html.ActionLink("Sản phẩm", "Index", "Product",null , new { @class = "colorTextAction" }) &emsp;
                    </li>
                    <li class="header__nav-item">
                        @Html.ActionLink("Bài viết", "Index", "Post",null , new { @class = "colorTextAction" }) &emsp;
                    </li>
                    <li class="header__nav-item">
                        @Html.ActionLink("Tuyển dụng", "Index", "Post",null , new { @class = "colorTextAction" }) &emsp;
                    </li>
                    <li class="header__nav-item">
                        @Html.ActionLink("Liên hệ", "Index", "Contact",null , new { @class = "colorTextAction" })
                    </li>
                    </ul>
                    <!--css start-->
                    <style>
                        a.colorTextAction{
                            color: #FFF;
                        }
                        a.colorTextAction:hover{
                            background-color: #FFD800;
                            color: #000;
                        }
                    </style>
            </div>
        </div>
        @RenderBody()
        <!-- footer -->
        <div class="row backroud">
            <div class="col-md-5">
                <h4 class="footer-heading">
                    Về chúng tôi
                </h4>
                <div class="footer__top-intro-content">
                    Dophuot365.com là hệ thống chuyên cung cấp những
                    phụ kiện, thiết bị cần thiết cho các bạn đam mê
                    phượt trên khắp cả nước.Chúng tôi sẽ liên tục cập
                    nhật những sản phẩm mới nhất, chất lượng nhất,
                    hợp thời nhất giúp các bạn có những trải nghiệm
                    tuyệt vời! <br> <br>
                    Điện thoại: 0352 860 701 <br>
                    Email: dophuot365@gmail.com <br>
                    Zalo: 0352 860 701 <br>
                </div>
            </div>
            <div class="col-md-3">
                <h4 class="footer__top-policy-heading">
                    Chính sách mua hàng
                </h4>

                <ul class="footer__top-policy-list">
                    <li class="footer__top-policy-item">
                        <a href="#" class="footer__top-policy-link">Hình thức đặt hàng</a>
                    </li>
                    <li class="footer__top-policy-item">
                        <a href="#" class="footer__top-policy-link">Hình thức thanh toán</a>
                    </li>
                    <li class="footer__top-policy-item">
                        <a href="#" class="footer__top-policy-link">Phương thức vận chuyển</a>
                    </li>
                    <li class="footer__top-policy-item">
                        <a href="#" class="footer__top-policy-link">Chính sách đổi trả</a>
                    </li>
                    <li class="footer__top-policy-item">
                        <a href="#" class="footer__top-policy-link">Hướng dẫn sử dụng</a>
                    </li>
                </ul>
            </div>
            <div class="col-md-4">
                <h4 class="footer-heading">
                    Hotline liên hệ
                </h4>
                <div class="footer__top-contact">
                    <div class="footer__top-contact-icon">
                        <img src="~/Content/images/phone_top.png" class="footer__top-contact-img">
                    </div>

                    <div class="footer__top-contact-phone-wrap">
                        <div class="footer__top-contact-phone">
                            0352.860.701
                        </div>
                        <div class="footer__top-contact-des">
                            (Tư vấn miễn phí 24/24)
                        </div>
                    </div>
                </div>
                <h4 class="footer__top-contact-heading">
                    Kết nối với chúng tôi
                </h4>
                <img class="footer__top-contact-social-link" src="~/Content/images/facebook.png">
                <img class="footer__top-contact-social-link" src="~/Content/images/youtube.png">
                <img class="footer__top-contact-social-link" src="~/Content/images/tiktok.png">
                <img class="footer__top-contact-social-link" src="~/Content/images/zalo.png">
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 footer__bottom">
                <span class="footer__bottom-content">Bản quyền thuộc về Dophuot365.com | Thiết kế bởi Thành Long</span>
            </div>
        </div>
        <!-- end footer -->
    </div>
    <!-- end container -->
</body>
</html>